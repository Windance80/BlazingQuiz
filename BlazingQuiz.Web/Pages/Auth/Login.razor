@page "/auth/login"

@layout EmptyLayout

<div class="container">
    <div class="row vh-100">
        <div class="col-md-4 col-sm-9 mx-auto my-auto border shadow-lg">
            <div class="mt-3">
                <div class="h3">Login | Blazing Quiz</div>
            </div>
            
            <hr>

            <EditForm Model="loginDto" OnValidSubmit="LoginAsync">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label for="form-label">Username: </label>
                    <InputText @bind-Value="loginDto.Username" class="form-control" />
                    <ValidationMessage For="() => loginDto.Username" />
                </div>
                <div class="mb-3">
                    <label for="form-label">Password: </label>
                    <InputText type="password" @bind-Value="loginDto.Password" class="form-control" />
                    <ValidationMessage For="() => loginDto.Password" />
                </div>

                @if (isBusy)
                {
                    <div class="mb-3">
                        <button type="button" disabled class="btn btn-secondary">Loggin in...</button>
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <button type="submit" class="btn btn-success">Login</button>
                    </div>
                }
            </EditForm>
        </div>
    </div>
</div>

@code {
    private LoginDto loginDto = new();
    private bool isBusy;
    private async Task LoginAsync(EditContext args)
    {
        isBusy = true;

        await Task.Delay(2000);

        isBusy = false;
    }
}